<UserControl x:Class="Idojaras.CityLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Idojaras"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400"  Background="Transparent">
    <Grid Height="50" Width="400" x:Name="Root">
        <Viewbox Stretch="Uniform" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=CityName}" FontSize="38" VerticalAlignment="Top"></TextBlock>
            <TextBlock Text="{Binding Path=Temperature}" FontSize="40"  Margin="70 0 0 0" VerticalAlignment="Top"></TextBlock>
        </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
