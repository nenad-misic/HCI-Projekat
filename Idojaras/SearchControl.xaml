<UserControl x:Class="Idojaras.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Idojaras"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <StackPanel Orientation="Horizontal" x:Name="Root">
        <TextBox Background="#54c3dc" Width="400" FontSize="20" Text="{Binding Path=MinTemp, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Background="#54c3dc" Width="100" FontSize="20">Search</Button>
    </StackPanel>
</UserControl>
